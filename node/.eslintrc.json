{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": "airbnb",
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly",
    "jQuery": true,
    "$": true
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "no-plusplus": ["error", {
      "allowForLoopAfterthoughts": true
    }],
    "prefer-arrow-callback": "off",
    "max-len": ["error", {"code": 125}]
  }
}
